term = ghostty
command = {{ shell.bin }} {{ shell.args }}
font-size = {{ terminal.font.size }}
font-family = {{ terminal.font.face }}
cursor-style = underline
shell-integration-features = no-cursor
window-width = {{ terminal.window.width }}
window-height = {{ terminal.window.height }}
background-opacity = {{ terminal.window.opacity }}
background-blur = {{ terminal.window.blur | lower }}
keybind = alt+left=unbind
keybind = alt+right=unbind
keybind = alt+u=reload_config
theme = light:{{ terminal.colors.ghostty.light }},dark:{{ terminal.colors.ghostty.dark }}

macos-option-as-alt = left
