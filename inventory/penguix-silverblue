            - chmod +x /tmp/install.sh
            - /tmp/install.sh -y --install-dependencies
            - test -d $HOME/.config/lvim.old && cp $HOME/.config/lvim.old/config.lua $HOME/.config/lvim/
            - rm -rf $HOME/.config/lvim.old
